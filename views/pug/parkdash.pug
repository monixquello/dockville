doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(href='https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css' rel='stylesheet')
  link(rel='stylesheet' href='/css/registerList.css')
  title Document
.dockille
  nav#nav-head.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='landing.html')
        img(src='/images/dock-logo.png' width='70px' height='70px')
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item.services.dockville
          li.nav-item
            a.nav-link(href='#')
              h3.parked Parking Dashboard
          li.nav-item
            a.nav-link(href='home')
              button.button.btn.sign(type='submit') Back
a(href="registerform") 
  button.register(type="button") Register here
.overlap
  .cards
    .card(style='width: 18rem;')
      .card-body
        p.card-text.info #{registers.length}
        h5.card-title.cars Total vehicles
        span.fas.fa-car
  .cards
    .card(style='width: 18rem;')
      .card-body
        p.card-text.info #{vehiclesIn.length}
        h5.card-title.cars Vehicle in
        span.fas.fa-car
  .cards
    .card(style='width: 18rem;')
      .card-body
        p.card-text.info #{vehiclesOut.length}
        h5.card-title.cars Vehicles Out
        span.fas.fa-car
h3.vehicle Parked Vehicles
table.table.park.table-hover#table
  thead.table-dark.hero
    tr
      th(scope='col') Firstname
      th(scope='col') Lastname
      th(scope='col') Numberplate
      th(scope='col') Model
      th(scope='col') Status
      th(scope='col') Charge
      th(scope='col') date
      th(scope='col') Time
      th(scope='col') Details
  tbody
  if vehiclesIn.length 
  each register in vehiclesIn
    tr
      th #{register.firstname}
      td #{register.lastname}
      td #{register.numberplate}
      td #{register.model}
      td #{register.status}
      td #{register.charge}
      td #{register.date}
      td #{register.time}

      td 
        
        a.btn.btn-warning(href="/api/register/edit/"+register._id) Signout

