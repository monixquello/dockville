doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/sign.css')
  title Signup
.dockille
  nav#nav-head.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='landing')
        img(src='/images/dock-logo.png' width='70px' height='70px')
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item.services.dockville
            li.nav-item
              a.nav-link(href="/api/dashboard")
                button.btn.sign(type="submit" ) Back
h3.signin Signup Form 
.box
  .card
    .card-body
      form#formId.sign-form(name='sign' action='/api/sign'  method="POST")
        .row
          .col
            label(for='firstname') Firstname
            input.form-control(type='text' name='firstname' aria-label='First name')
          .col
            label(for='lastname') Last name
            input.form-control(type='text' name='lastname' aria-label='Last name')
        .mb-3
          label.form-label(for='username') Username
          input#username.form-control(type='text' name='username' )
        .mb-3
          label.form-label(for='exampleInputEmail1') Email address
          input#exampleInputEmail1.form-control(type='email' name='email' aria-describedby='emailHelp')
        .mb-3
          label.form-label(for='contacts') Contacts
          input#contacts.form-control(type='contacts' name='contacts')
        .mb-3
          label.form-label(for='NIN_No') NIN No.
          input#NIN-No.form-control(type='alpha-text' name='NIN_No')
        .mb-3
          label.form-label(for='exampleInputPassword1') Password
          input#exampleInputPassword1.form-control(type='password' name='password')
        .row
          .col
            label(for='gender') Gender
            select.form-select(name='gender' aria-label='Default select example')
              option(selected='') Select
              option(value='female') Female
              option(value='male') Male
          .col
            label(for='role') Role
            select.form-select(name='role' aria-label='Default select example')
              option(selected='') Select
              option(value='manager') Manager
              option(value='employee') Employee
        button.btn.signin(type='submit') AddUser
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
