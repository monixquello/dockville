doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/tyre.css')
  title tyre form
.dockille
  nav#nav-head.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='landing.html')
        img(src='/images/dock-logo.png' width='70px' height='70px')
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item.services.dockville
          li.nav-item
            a.nav-link(href='#')
              h3.tyre Tyre Clinic
          li.nav-item
            a.nav-link(href='tyredash')
              button.btn.sign(type='submit') back
h4.title Tyre service form
.box
  .card
    .card-body
      form#formId.tyre-form(name='tyre' action='/api/tyre/edit?id='+tyre._id onsubmit="return Validate()" method="POST")
        .row
          .col
            label(for='firstname') Firstname
            input.form-control(type='text' name='firstname' aria-label='First name' value=tyre.firstname)
          .col
            label(for='lastname') Last name
            input.form-control(type='text' name='lastname' aria-label='Last name' value=tyre.lastname)
        .col
          label(for='telephone') Telephone
          input.form-control(type='number' name='telephone' aria-label='telephone' value=tyre.telephone)
        .row
          .col
            label(for='service') Tyre service
            select.form-select(aria-label='Default select example' name='tyre_service' value=tyre.tyre_service)
              option(selected='') select
              option(value='puncture-fixing' selected=(tyre.tyre_service === 'puncture-fixing' ? 'selected' : '')) Puncture fixing
              option(value='tyre-pressure' selected=(tyre.tyre_service === 'tyre-pressure' ? 'selected' : '')) Tyre pressure
              option(value='valves'  selected=(tyre.tyre_service === 'valves' ? 'selected' : '')) Valves
          .col
            label(for='tyresize') Tyre Size
            input.form-control(type='text' name='tyresize' aria-label='tyresize' value=tyresize)
        .col
          label(for='date') Date
          input.form-control(type='date' name='date' aria-label='date' value=tyre.date)
        .mb-3
          label.form-label(for='charge') Charge
          input#charge.form-control(type='charge' name='charge' value=tyre.charge)
        button.btn.signin(type='submit') Submit
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
