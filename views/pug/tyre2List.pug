doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/bodaList.css')
  title tyre
.dockille
  nav#nav-head.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='landing')
        img(src='/images/dock-logo.png' width='70px' height='70px')
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item.services.dockville
          li.nav-item
            a.nav-link(href='#')
              h3.parked Tyre Section
          li.nav-item
            a.nav-link(href='tyredash')
              button.btn.sign(type='submit') back
.container
  .row.mb-3
    .col-md-6.offset-md-3
      form(action='/api/search' method='post')
        .input-group
          input.form-control(type='text' name='search' placeholder='Search...')
          button.btn.btn-primary.search(type='submit') Search

table.table.park.table-hover
  thead.table-dark.hero
    tr
      th(scope='col') Firstname
      th(scope='col') Lastname
      th(scope='col') Tyre type
      th(scope='col') Quantity
      th(scope='col') Date
      th(scope='col') Charge
      th(scope='col') Delete
      th(scope='col') Edit
  tbody
  if tyre2s.length 
  each tyre2 in tyre2s
    tr
      th #{tyre2.firstname}
      td #{tyre2.lastname}
      td #{tyre2.tyretype}
      td #{tyre2.quantity}
      td #{tyre2.date}
      td #{tyre2.charge}
      td 
        form(action="/api/tyre2/delete" method="POST")
           input(type="hidden" name="id" value=tyre2._id)
           a.btn.btn-danger(type="submit") Delete 
      td 
        a.btn.btn-warning(href="/api/tyre2/edit/"+tyre2._id) Edit
    tr
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
