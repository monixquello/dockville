doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/stock.css')
  title Stock
.dockille
  nav#nav-head.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='landing')
        img(src='/images/dock-logo.png' width='70px' height='70px')
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item.services.dockville
            li.nav-item
              a.nav-link(href="/api/dashboard")
                button.btn.sign(type="submit" ) Back
h3.signin.title Stock form 
.box
  .card
    .card-body
      form#formId.stock-form(name='stock' action='/api/stock'  method="POST")
        .row
          .col
            label(for='itemname') Item Name
            input.form-control(type='text' name='itemname' aria-label='itemname')
        .mb-3
           label(for='item description') Item Description
           input.form-control(type='text' name='itemDescription' aria-label='itemdescription')
 
        .mb-3
           label(for='itemType') Item Type
           input.form-control(type='text' name='itemtype' aria-label='itemType')
 
        .mb-3
           label(for='quantity') Quantity
           input.form-control(type='number' name='quantity' aria-label='quantity')
        .row 
          .col 
            label(for='purchasePrice') Purchase Price
            input.form-control(type='number' name='purchase' aria-label='purchasePrice')
          .col 
            label(for='sellingPrice') Selling Price
            input.form-control(type='number' name='sellingPrice' aria-label='sellingPrice')
        .mb-3
           label(for='purchaseDate') Date Of Purchase
           input.form-control(type='date' name='purchaseDate' aria-label='purchaseDate')
 

        button.btn.signin(type='submit') AddStock
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
