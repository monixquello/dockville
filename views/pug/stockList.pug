doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css' integrity='sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==' crossorigin='anonymous' referrerpolicy='no-referrer')
  link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet', href='/css/bodaList.css')
  title Document
.dockille
  nav#nav-head.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='landing.html')
        img(src='/images/dock-logo.png', width='70px', height='70px')
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item.services.dockville
          li.nav-item
            a.nav-link(href='#')
              h3.parked Dashboard
          li.nav-item
            a.nav-link(href='dashboard')
              button.button.sign.btn(type='submit') back
main#site-main
  .container
    .box-nav.d-flex.justify-between
      a.border-shadow(href='stock')
        span.text-gradient
          | AddStock
          i.fas.fa-user

.container
  .row.mb-3
    .col-md-6.offset-md-3
      form(action='/api/search', method='post')
        .input-group
          input.form-control(type='text', name='search', placeholder='Search...')
          button.btn.btn-primary.search(type='submit') Search
table.table.park.table-hover
  thead.table-dark.hero
    tr
      th(scope='col') Item Name
      th(scope='col') Description
      th(scope='col') Item Type
      th(scope='col') Quantity
      th(scope='col') Purchase_price
      th(scope='col') Selling_price
      th(scope='col') Delete
      th(scope='col') Edit
  tbody
    if stocks.length
      each stock in stocks 
        tr
          th #{stock.itemname}
          td #{stock.description}
          td #{stock.itemtype}
          td #{stock.quantity}
          td #{stock.purchase_price}
          td #{stock.selling_price}
          td 
            form(action="/api/stock/delete", method="POST")
              input(type="hidden", name="id", value=stock._id)
              a.btn.btn-danger(type="submit") Delete 
          td 
            a.btn.btn-warning(href="/api/stock/edit/#{stock._id}") Edit
 
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
