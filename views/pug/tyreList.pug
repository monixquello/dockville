doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/tyreList.css')
  title tyre
.dockille
  nav#nav-head.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='landing')
        img(src='/images/dock-logo.png' width='70px' height='70px')
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item.services.dockville
          li.nav-item
            a.nav-link(href='#')
              h3.parked Tyre Section
          li.nav-item
            a.nav-link(href='tyredash')
              button.btn.sign(type='submit') back
table.table.park.table-hover
  thead.table-dark.hero
    tr
      th(scope='col') Firstname
      th(scope='col') Lastname
      th(scope='col') Tyre_Service
      th(scope='col') Date
      th(scope='col') Charge
      th(scope='col') Delete
      th(scope='col') Edit
  tbody
  if tyres.length 
  each tyre in tyres
    tr
      th #{tyre.firstname}
      td #{tyre.lastname}
      td #{tyre.tyre_service}
      td #{tyre.date}
      td #{tyre.charge}
      td 
        form(action="/api/tyre/delete" method="POST")
           input(type="hidden" name="id" value=tyre._id)
           a.btn.btn-danger(type="submit") Delete 
      td 
        a.btn.btn-warning(href="/api/tyre/edit/"+tyre._id) Edit
    tr
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
