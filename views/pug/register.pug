doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='/css/register.css')
  title register
.dockille
  nav#nav-head.navbar.navbar-expand-lg.bg-body-tertiary
    .container-fluid
      a.navbar-brand(href='landing')
        img(src='/images/dock-logo.png' width='70px' height='70px')
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item.services.dockville
          li.nav-item
            a.nav-link(href='#')
              h3 Parking
          li.nav-item
            a.nav-link(href='parkdash')
              button.btn.sign(type='submit') back
h4.title Register form
.box
  .card
    .card-body
      form#formId.parking-form(name='register' action='/api/regregister' onsubmit="return Validate()" method="POST")
        .row
          .col
            label(for='firstname') Firstname
            input.form-control(type='text'  name="firstname" aria-label='First name')
          .col
            label(for='lastname') Last name
            input.form-control(type='text' name="lastname" aria-label='Last name')
          .row
            .col
              label(for='telephone') Telephone
              input.form-control(type='number' name=telephone aria-label='telephone')
          .mb-3
            label.form-label(for='vehicletype') Vehicle type
            select.form-select(aria-label='Default select example' name="vehicletype")
              option(selected='') select
              option(value='coasters') Coasters
              option(value='trucks') Trucks
              option(value='taxi') Taxi
              option(value='personalcar') Personal cars
              option(value='bodas') Bodas
          .row
            .col
              label(for='model') Model
              input.form-control(type='text' name="model" aria-label='model')

            .col
              label(for='color') Color
              input.form-control(type='color' name="color" aria-label='color')
          .row 
            .col
              label(for='numberplate') Number plate
              input.form-control(type='alpha-text' name="numberplate" aria-label='numberplate')
          .row
            .col
              label(for='date') Date
              input.form-control(type='date' name="date" aria-label='date')
            .col
              label(for='time') Time
              input.form-control(type='time' name="time" aria-label='time')
          .row
            .col
              label.form-label(for='parkingtype') Parking type
              select.form-select(aria-label='Default select example' name="parkingtype")
                option(selected='') select
                option(value='day') Day
                option(value='night') Night
                option(value='less3hrs') Less than 3hrs
            .col
              label.form-label(for='status') Status
              select.form-select(aria-label='Default select example' name="status")
                option(selected='') select
                option(value='in') In
                option(value='out') Out
          .mb-3
            label.form-label(for='charge') Charge
            input#charge.form-control(type='charge' name="charge")
          button.btn.signin(type='submit') Submit
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
